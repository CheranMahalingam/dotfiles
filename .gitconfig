[user]
  # Set in .gitconfig.local

[core]
  editor = nvim

[merge]
  tool = nvimdiff

[mergetool]
  prompt = false
	trustExitCode = true

[diff]
  tool = nvimdiff

[difftool]
  prompt = false
	trustExitCode = true

[include]
  path = ~/.gitconfig.local

[difftool "nvimdiff"]
  cmd = nvim -f -c \"DiffviewOpen\"

[mergetool "nvimdiff"]
  cmd = nvim -f -c \"DiffviewOpen\"

